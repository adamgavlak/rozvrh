<%= form_for wage_category do |f| %>
    <% if wage_category.errors.any? %>
        <div class="error_detail">
          Nastala chyba
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label "Názov" %>
      <%= f.text_field :title, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.label "Hodinová mzda" %>
      <%= f.text_field :wage_per_hour, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.submit "Uložiť kategóriu mzdy", class: "btn btn-primary" %>
    </div>
<% end %>