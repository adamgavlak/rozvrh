<h1>Kategórie úväzkov</h1>

<table class="table table-striped table-bordered">
  <thead>
    <tr>
      <td>Názov</td>
      <td align="right">Hodinový úväzok</td>
      <td colspan="2" align="center">Akcie</td>
    </tr>
  </thead>

  <tbody>
    <% @wage_categories.each do |category| %>
      <tr>
        <td><%= category.title %></td>
        <td align="right"><%= category.wage_per_hour %></td>
        <td align="center">
          <%= link_to edit_wage_category_path(category) do %>
              <span class="glyphicon glyphicon-pencil"></span> Upraviť
          <% end %>
        </td>
        <td align="center">
          <%= link_to category, method: :delete, data: {confirm: "Ste si istý?"} do %>
              <span class="glyphicon glyphicon-trash"></span> Vymazať
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "Pridať kategóriu", new_wage_category_path %>