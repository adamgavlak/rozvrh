<!DOCTYPE html>
<html>
  <head>
    <title>Podpora katedrových rozvrhov KMMOA</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-default">
        <div class="container">
          <div class="navbar-header">
            <a href="/" class="navbar-brand">Podpora rozvrhov KMMOA</a>
          </div>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to "Predmety", courses_path %></li>
              <li><%= link_to "Skupiny", groups_path %></li>
              <li><%= link_to "Vyučujúci", teachers_path %></li>
              <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><%= octicon "person" %> <span class="caret"></span></a>
                <ul class="dropdown-menu dropdown-menu--wider">
                  <li><a href="#">Prihlásený ako <strong><%= current_user.email %></strong></a></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Účet", edit_user_registration_path %></li>
                  <li><%= link_to "Príručka", root_url %></li>
                  <li role="separator" class="divider"></li>
                  <li><%= link_to "Nastavenia aplikácie", settings_path %></li>
                  <li><%= link_to "Odhlásiť sa", destroy_user_session_path, method: :delete %></li>
                </ul>
              </li>

            <% else %>
              <li><%= link_to "Prihlásiť sa", new_user_session_path %></li>
            <% end %>

          </ul>
        </div>
      </nav>
    </header>
    <main>
      <div class="container">
        <% if notice %>
          <p class="alert alert-success"><%= notice %></p>
        <% end %>
        <% if alert %>
          <p class="alert alert-danger"><%= alert %></p>
        <% end %>

        <%= yield %>
      </div>
    </main>
  </body>
</html>
